<h2 class="page-header">登录</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <label for="email">邮箱</label>
    <input type="email" class="form-control" autofocus="autofocus">
  </div>
  <div class="form-group">
    <label for="password">密码</label>
    <input type="password" class="form-control" autofocus="autofocus">
  </div>

  <button type="submit" class="btn btn-lg btn-default">登录</button>
<% end %>

